#!/usr/bin/env ruby

require "bundler/setup"
require "dry/web/console"
require_relative "../system/boot"

# Convenience to make messing around in the database easier
# e.g. $decks => Decks relation
AllSeeingWizards::Container["persistence.rom"].relations.each do |name, relation|
  eval "$#{name} = relation"
end

Dry::Web::Console.start
