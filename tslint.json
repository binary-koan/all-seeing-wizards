{
  "extends": [
    "tslint:latest",
    "tslint-config-prettier"
  ],
  "rules": {
    "object-literal-sort-keys": false,
    "max-classes-per-file": false,
    "interface-name": false,
    "no-bitwise": false,
    "no-object-literal-type-assertion": false,
    "variable-name": false,
    // Common and specific dependencies at different levels are currently used interchangeably
    "no-implicit-dependencies": false,
    "no-submodule-imports": false,
    //TODO not working yet, see https://github.com/palantir/tslint/issues/2649
    "no-unused-variable": [
      true,
      {
        "ignore-pattern": "^_"
      }
    ],
    "curly": [
      true,
      "ignore-same-line"
    ],
    "no-console": [
      true,
      "log"
    ]
  }
}